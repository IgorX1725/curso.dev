{
  "name": "curso.dev",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "predev": "npm run services:up && npm run services:wait:database && npm run migrations:up",
    "dev": "./scripts/dev.sh",
    "postdev": "npm run services:stop",
    "pretest": "npm run services:up",
    "test": "concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "pretest:watch": "npm run services:up && npm run migrations:up",
    "test:watch": "concurrently -n next,jest --prefix none --hide next -s command-jest \"next dev\" \"jest --watchAll --runInBand --verbose\"",
    "posttest:watch": "npm run services:stop",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:next:check": "next lint --dir .",
    "lint:next:fix": "next lint --dir . --fix",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:all:check": "npm run lint:next:check && lint:eslint:check && lint:prettier:check",
    "lint:all:fix": "npm run lint:next:fix && lint:eslint:fix && lint:prettier:fix",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.1.6",
    "node-pg-migrate": "7.9.0",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@eslint/js": "^9.19.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
